    <title>Shelfie</title>

  </head>
  <body>

    <nav class="nav mb-2" role="navigation" aria-label="Main Navigation">
    <a class="nav-link active link-color font" aria-current="page" href="/" tabindex="0">
      <span class="nav-text">Home</span> <i class="fa-solid fa-house" aria-hidden="true"></i>
    </a>
    <a class="nav-link link-color font" href="/collection" tabindex="0">
      <span class="nav-text">My Collections</span> <i class="fa-solid fa-book-open-reader" aria-hidden="true"></i>
    </a>
    <a class="nav-link link-color font" href="/search" tabindex="0">
      <span class="nav-text">Search Books</span> <i class="fa-solid fa-magnifying-glass" aria-hidden="true"></i>
    </a>
    {{#if loggedIn}}
      <a class="nav-link link-color font" id="logout" href="/login" tabindex="0">
        <span class="nav-text">Logout</span> <i class="fa-regular fa-circle-xmark" aria-hidden="true"></i>
      </a>
    {{else}}
      <a class="nav-link link-color font" href="/login" tabindex="0">
        <span class="nav-text">Login</span> <i class="fa-solid fa-door-open" aria-hidden="true"></i>
      </a>
    {{/if}}
  </nav>



    <!-- Skip Link / Nested Buttons-->
    <div
  id="nestedbtn"
  class="btn-group"
  role="group"
  aria-label="Button group with nested dropdown"
>
  <div class="btn-group dropup" role="group">
    <!-- Dropdown button -->
    <button
      type="button"
      class="btn btn-primary dropdown-toggle"
      data-bs-toggle="dropdown"
      aria-expanded="false"
    >
      <i class="fa-solid fa-circle-info" id="i-btn"></i>
    </button>
    <!-- Dropdown list -->
    <ul id="dropup" class="dropdown-menu dropdown-menu-start">
      <li>
        <button class="btn-styled dropdown-item">
          <a href="#main-content">
            <i class="fa-solid fa-forward" id="fastforward"></i>
            <span>Skip to main content</span>
          </a>
        </button>
      </li>
      <li>
        <button class="btn-styled dropdown-item">
          <a href="#top">
            <i class="fa-solid fa-arrow-up-wide-short" id="uptotop"></i>
            <span>Back to Top</span>
          </a>
        </button>
      </li>
      <li>
        <button id="read-aloud" class="btn-styled dropdown-item">
          <i class="fa-solid fa-ear-listen" id="earbtn"></i>
          <span>Read Aloud</span>
        </button>
      </li>
      <li>
        <button id="focus-button" class="btn-styled dropdown-item">
          <i class="fa-solid fa-eye" id="eyebtn"></i>
          <span>Focus Input</span>
           <input type="text" id="search-input" placeholder="Login" class="hidden" />
        </button>
      </li>
    </ul>
  </div>
</div>



